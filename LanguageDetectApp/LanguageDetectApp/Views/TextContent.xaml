<Page
    x:Class="LanguageDetectApp.Views.TextContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LanguageDetectApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mv="using:LanguageDetectApp.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <!--<Page.Resources>
        <m:CharacterRecognizeModel x:Key="CharacterRecognize"></m:CharacterRecognizeModel>
    </Page.Resources>-->
    <Page.Resources>
        <mv:TextContentConverter x:Key="textconverter"></mv:TextContentConverter>
    </Page.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBox Name="textContent" 
                 Grid.Row="0"  
                 Text="{Binding PairWords, Converter={StaticResource textconverter}}" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Stretch"
                 Margin="0,0,0,0" />
        
        <StackPanel Name="translatePanel" Grid.Row="1" Height="Auto" Visibility="Collapsed">
            <Button x:Name="closeTranslateBtn" Content="x" Grid.Row="1" 
                    VerticalAlignment="Top" HorizontalAlignment="Right"
                    BorderThickness="0" 
                    FontSize="30" Click="closeTranslateBtn_Click" />
            <TextBox Name="translateContent" 
                     Grid.Row="1"  
                     Text="" 
                     Margin="0,0,0,0" TextWrapping="Wrap" 
                     VerticalAlignment="Stretch"
                     Height="250"
                     />
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="translateBtn" Label="Translate" Icon="Character" Click="translateBtn_Click"/>
                <AppBarButton x:Name="saveBtn" Label="Save" Icon="Save"/>
                <AppBarButton Label="Share" Icon="OtherUser"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>


</Page>
